@model TrainingFPTCo.Models.TopicDetail
@{
    ViewData["title"] = "Update Topics";
    ViewData["breadcrumb"] = "Home";
    ViewData["breadcrumb_active"] = "Update Topics";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <h3> Add new Topic page !</h3>
        <a class="btn btn-primary" href="@Url.Action("Index", "Topic")">  Back to List Topics</a>
        <div class="card mt-5">
            <div class="card-header">
                <h5>Update Topic</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="post" asp-action="Update">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Name"></label>
                                <input type="text" class="form-control" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input type="hidden" asp-for="Id" />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="CourseId">Course</label>
                                <select asp-for="CourseId"
                                        class="form-control"
                                        asp-items="@(new SelectList(ViewBag.Courses, "Value", "Text"))"></select>
                                <span asp-validation-for="CourseId" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Description"></label>
                                <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Document"></label>
                                <input type="file" asp-for="Document" class="form-control" />(PDF,MP3,MP4 file)
                                <span asp-validation-for="Document"></span>
                                <br />
                                @if (!string.IsNullOrEmpty(Model.ViewDocumentTopic))
                                {
                                <embed src="/uploads/documents/@Model.ViewDocumentTopic" />
                                }
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="AttachFile"></label>
                                <input type="file" asp-for="AttachFile" class="form-control" />(PDF file)
                                <span asp-validation-for="AttachFile"></span>
                                <br />
                                @if (!string.IsNullOrEmpty(Model.ViewAttachFileTopic))
                                {

                                <embed src="/uploads/attachfiles/@Model.ViewAttachFileTopic" width="150" controls />


                                }
                                else
                                {
                                <p>There is no AttachFile  </p>
                                }

                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="PosterTopic"></label>
                                <input type="file" asp-for="PosterTopic" class="form-control" />
                                <span asp-validation-for="PosterTopic"></span>
                                <br />
                                <img width="50%" class="img-fluid" src="/uploads/images/@Model.ViewPosterTopic" />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="TypeDocument"></label>
                                <input type="text" class="form-control" asp-for="TypeDocument" />
                                <span asp-validation-for="TypeDocument" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Status"></label>
                                <select asp-for="Status" class="form-control">
                                    <option value="Active"> Active</option>
                                    <option value="Deactive"> Deactive</option>
                                </select>
                                <span asp-validation-for="Status"></span>
                            </div>
                            <button type="submit" class="my-3 btn btn-primary"> Save </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>